# CI/CD Dashboard - Root .env
# Copy this file to .env and adjust values as needed.

# --- Postgres ---
POSTGRES_DB=cicd_dashboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Derived DATABASE_URL used by backend (override if needed)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# --- Redis ---
REDIS_URL=redis://redis:6379

# --- Backend ---
NODE_ENV=production
PORT=5000
JWT_SECRET=change-me
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info

# Alerts
ALERTS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=CI/CD Alerts <alerts@example.com>
# Slack webhook is optional; only set if enabling Slack alerts
# SLACK_WEBHOOK_URL=

# --- Frontend build args/env ---
VITE_API_URL=http://localhost:5000/api/v1
VITE_WS_URL=ws://localhost:5000
VITE_ENABLE_ALERTS=true
